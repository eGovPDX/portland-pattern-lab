{% set classes_top_left = ["md:w-1/3"] %}

<div class="flex flex-col mb-8">
  <div class="w-full flex flex-col md:flex-row">
    <div class="{{ classes_top_left|merge(['md:w-1/2'])|join(' ') }}">
      {% block top_left %}
          {% include "@utilities/_placeholder.twig" with {
            "placeholder" : {
              "text": "top left"
            }
          } only %}
      {% endblock %}
    </div>
    <div class="md:w-1/2">
      {% block top_right %}
          {% include "@utilities/_placeholder.twig" with {
            "placeholder" : {
              "text": "top right"
            }
          } only %}
      {% endblock %}
    </div>
  </div>
  <div class="w-full">
    {% block center %}
        {% include "@utilities/_placeholder.twig" with {
          "placeholder" : {
            "text": "center"
          }
        } only %}
    {% endblock %}
  </div>
</div>
<div class="flex -mx-2">
  <div class="w-full px-2">
    {% block bottom %}
      {% include "@utilities/_placeholder.twig" with {
        "placeholder" : {
          "text": "bottom"
        }
      } only %}
    {% endblock %}
  </div>
</div>